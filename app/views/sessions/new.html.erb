<% provide(:title, t('util.login')) %>
<h1>Log in</h1>

<div>
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name ,class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.label :remember_me, class: "form-group form-check" do %>
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <label class="form-check-label">Remember me on this computer</label>
      <% end %>

      <%= f.submit t('util.login'), class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>

